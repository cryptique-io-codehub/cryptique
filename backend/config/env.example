# MongoDB Connection (Use secure connection string format with authentication)
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/cryptique?retryWrites=true&w=majority

# JWT Secret (Use a strong random string of at least 32 characters)
JWT_SECRET=change_this_to_a_long_random_string_at_least_32_chars

# Application Port
PORT=3001

# Node Environment (development, production, test)
NODE_ENV=development

# API Keys
GEMINI_API=your_gemini_api_key
DUNE_API_KEY=your_dune_api_key

# Blockchain API Keys 
ETHERSCAN_API_KEY=your_etherscan_api_key
POLYGONSCAN_API_KEY=your_polygonscan_api_key
ARBISCAN_API_KEY=your_arbiscan_api_key
OPTIMISM_API_KEY=your_optimism_api_key
BSC_SCAN_API_KEY=your_bscscan_api_key
BASESCAN_API_KEY=your_basescan_api_key

# Email Configuration (for OTP and other notifications)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Frontend URL for redirects and CORS
FRONTEND_URL=http://localhost:3000

# In case of self-signed certificates in development (set to "1" to enable)
NODE_TLS_REJECT_UNAUTHORIZED=0

# MongoDB Connection Debugging (enable only when needed)
DEBUG_MONGO=false 