{
  "version": 2,
  "name": "cryptique-backend-optimized",
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/health",
      "dest": "/api/health"
    },
    {
      "src": "/api/analytics/(.*)",
      "dest": "/api/analytics/$1"
    },
    {
      "src": "/api/users/(.*)",
      "dest": "/api/users/$1"
    },
    {
      "src": "/api/teams/(.*)",
      "dest": "/api/teams/$1"
    },
    {
      "src": "/api/websites/(.*)",
      "dest": "/api/websites/$1"
    },
    {
      "src": "/api/smartcontracts/(.*)",
      "dest": "/api/smartcontracts/$1"
    },
    {
      "src": "/api/sdk/(.*)",
      "dest": "/api/sdk/$1"
    },
    {
      "src": "/api/onchain/(.*)",
      "dest": "/api/onchain/$1"
    },
    {
      "src": "/api/campaigns/(.*)",
      "dest": "/api/campaigns/$1"
    },
    {
      "src": "/api/transactions/(.*)",
      "dest": "/api/transactions/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "MONGODB_URI": "@mongodb_uri",
    "GEMINI_API_KEY": "@gemini_api_key"
  }
}
